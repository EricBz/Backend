doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    title Con PUG

  body.container.bg-light
    header
      ul.nav.nav-tabs
        li.nav-item
          a.nav-link(aria-current='page', href='ingresar') Formulario
        |       
        li.nav-item
          a.nav-link(href='') Productos
    if Prods.length > 0  
         table.table
            thead
                th(scope='col')      
                th(scope='col') Producto
                th(scope='col') Precio
                th(scope='col') Imagen  
            each producto in  Prods
                tbody
                    th(scope='row')= producto.Id         
                    td= producto.title        
                    td= producto.price
                    td: img(src=producto.thumbnail style="width:100px;")     
    else
        h1 No hay productos cargados 
                    
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')
